<ScrollView
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/apositiveregId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A+"
            android:textSize="25dp"
            android:textColor="#ff22"
            android:gravity="center"
            style="@android:style/Widget.Holo.Light.TextView.SpinnerItem"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />

        <EditText
            android:id="@+id/apositivenameId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box_style"
            android:hint="Name"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />

        <AutoCompleteTextView
            android:id="@+id/apositivegenderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/box_style"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/apositiveemailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/box_style"
            />

       <TextView
           android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/apositivephoneId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone No"
            android:text="+880"
            android:inputType="number"
            android:maxLength="14"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/box_style"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/apositivepasswordId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="20dp"
            android:background="@drawable/box_style"
            android:textStyle="bold"/>

       <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/apositiveconfirmpasswordId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="20dp"
            android:background="@drawable/box_style"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="District :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <AutoCompleteTextView
            android:id="@+id/apositivedistriceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="District"
            android:textSize="20dp"
            android:background="@drawable/box_style"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Village/Area :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/apositivevillageId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textSize="20dp"
            android:background="@drawable/box_style"
            android:textStyle="bold"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="University/College :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/apositiveuniversityId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="University/College"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/box_style"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Blood Donate Date :"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/apositivelastdonetId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="last Blood Donate Date"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/box_style"/>

<Button
    android:id="@+id/apositiveregbtnId"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:textSize="20dp"
    android:textAllCaps="false"
    android:background="#ff22"
    android:layout_marginBottom="10dp"
    />


    </LinearLayout>



</ScrollView>

</LinearLayout>