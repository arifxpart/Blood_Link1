<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".CreateNewAccountActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Select Your Blood Group"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        android:gravity="center">




        <LinearLayout
            android:gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">



            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/apositivecardId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="A+"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A Positive"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/anegativecardId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="A-"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A Negative"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">



            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/bpositivecardId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="B+"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B Positive"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/bnegativecardId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="B-"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B Negative"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>







        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">



            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/opositivecardId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="O+"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O Positive"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/onegativecardId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="O-"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O Negative"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">



            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/abpositivecardId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="AB+"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AB Positive"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="10dp"
                android:clickable="true"
                android:id="@+id/abnegativecardId"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:text="AB-"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:tint="@color/colorPrimary"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AB Negative"
                        android:textSize="20dp"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"/>



                </LinearLayout>

            </androidx.cardview.widget.CardView>







        </LinearLayout>

    </LinearLayout>

</LinearLayout>